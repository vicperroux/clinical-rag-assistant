# Clinical RAG Assistant Configuration
# Copy this file to .env and fill in your API keys

# Required: Mistral API key for embeddings and LLM generation
MISTRAL_API_KEY=your_mistral_api_key_here

# Optional: Cohere API key for AI reranking
COHERE_API_KEY=your_cohere_api_key_here

# Data directory
DATA_DIR=data

# Embedding model
EMBED_MODEL=mistral-embed

# Text processing settings (paragraph-aware chunking)
CHUNK_SIZE=320
CHUNK_OVERLAP=64

# Default search parameters
DEFAULT_SEARCH_RESULTS=8

# Gradio app settings
GRADIO_SERVER_NAME=0.0.0.0
GRADIO_SERVER_PORT=7860
GRADIO_SHARE=false